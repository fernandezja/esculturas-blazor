@page "/starrating"

<div class="starrating risingstar d-flex justify-content-center flex-row-reverse">
    <input type="radio" id="star5" name="rating" value="5" class="@activeClassName[4]" @onmouseover="@(e => OnStarMouseOver(e, 5))" /><label for="star5" title="5 star">5</label>
    <input type="radio" id="star4" name="rating" value="4" class="@activeClassName[3]" @onmouseover="@(e => OnStarMouseOver(e, 4))" /><label for="star4" title="4 star">4</label>
    <input type="radio" id="star3" name="rating" value="3" class="@activeClassName[2]" @onmouseover="@(e => OnStarMouseOver(e, 3))" /><label for="star3" title="3 star">3</label>
    <input type="radio" id="star2" name="rating" value="2" class="@activeClassName[1]" @onmouseover="@(e => OnStarMouseOver(e, 2))" /><label for="star2" title="2 star">2</label>
    <input type="radio" id="star1" name="rating" value="1" class="@activeClassName[0]" @onmouseover="@(e => OnStarMouseOver(e, 1))" /><label for="star1" title="1 star">1</label>
</div>


@code {

    [Parameter]
    public int Value { get; set; }

    string[] activeClassName = new string[5];

    protected override void OnInitialized()
    {
        Render(0);
    }

    protected void OnStarMouseOver(MouseEventArgs mouseEventArgs, int value)
    {
        Render(value);
    }

    

    protected void Render(int value) { 
        for (int i = 0; i < 5; i++)
        {
            if (i<=value)
            {
                activeClassName[i] = "active";
            }
            else
            {
                activeClassName[i] = string.Empty;
            }

        }
    }

}
